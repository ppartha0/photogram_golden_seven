<h1>Edit Photo <%= @photo_number %></h1>

<form action="/update_photo/<%= @photo_number %>">
  <div>
    <label for="source_input">
      Image URL
    </label>

    <input id="source_input" type="text" name="the_source" value="<%= @photo_source %>">
  </div>

  <div>
    <label for="caption_input">
      Caption
    </label>

    <input id="caption_input" type="text" name="the_caption" value="<%= @photo_caption %>">
  </div>

  <button>
    Update Photo
  </button>
</form>
